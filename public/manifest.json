{
  "name": "크롬 메모장",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "크롬으로 즐기는 메모장",
  "icons": {
    "192": "logo192.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "logo192.png",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "options_page": "index.html"
}